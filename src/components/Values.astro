---
import "../styles/global.css";
---

<section class="relative bg-white py-16 px-6 md:px-20">
    
    <div class="relative text-center">
        <h3 class="text-3xl font-bold uppercase text-sky-800">Nuestros Valores</h3>
        <h2 class="text-5xl md:text-6xl font-bold mt-3 text-gray-900">Integra F.A.M.I.L.I.A.</h2>
    </div>
    
    <!-- Primera fila (4 elementos) -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-12 text-center">
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-blue-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_FORTALEZA" alt="Fortaleza" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Fortaleza</p>
        </div>
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-yellow-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_AMOR" alt="Amor" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Amor</p>
        </div>
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-green-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_RESPETO" alt="Mutuo Respeto" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Mutuo Respeto</p>
        </div>
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-red-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_INTEGRIDAD" alt="Integridad" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Integridad</p>
        </div>
    </div>

    <!-- Segunda fila (3 elementos centrados) -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 text-center place-items-center">
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-indigo-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_LEALTAD" alt="Lealtad" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Lealtad</p>
        </div>
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-purple-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_IMPULSO" alt="Impulso al Crecimiento" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Impulso al Crecimiento</p>
        </div>
        <div class="flex flex-col items-center">
            <div class="w-44 h-44 rounded-full border-8 border-orange-500 flex items-center justify-center bg-white">
                <img src="URL_ICONO_APOYO" alt="Apoyo" class="w-28 h-28">
            </div>
            <p class="mt-4 font-bold text-2xl">Apoyo</p>
        </div>
    </div>

</section>
